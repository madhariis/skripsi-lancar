{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es7"
    ],
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "alwaysStrict": true
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}